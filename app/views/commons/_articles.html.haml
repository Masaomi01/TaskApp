= link_to article_path(id: article.id) do
  .article
    .article-title
      = article.title
    - if user_signed_in? && current_user.has_written?(@article)  
      .dropdown-shape
        = image_tag 'Shape.png', class: 'dropbtn-shape'
          .dropdown-content.mini
            = link_to '編集する', edit_article_path(@article) do
    .article_content
      = article.content
    .article_detail
      = image_tag 'Oval.png'


    