.container

  = form_with(model: @task, url: article_tasks_path(@task.article), method: 'post', local: true) do |f|
    %div
      = f.label :eyecatch, '画像'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    %div
      = f.label :deadline, '期限'
    .deadline
      %div
        = f.date_field :deadline, class: 'text'
    = f.submit '保存', class: 'btn-primary'